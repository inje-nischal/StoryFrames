{
  "manifest_version": 3,
  "name": "StoryFrames - Convert News into Comics, Manhwa, or Ghibli-Style Visuals",
  "version": "1.0",
  "description": "Turn news articles into 4-panel webtoon comics using AI",
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}